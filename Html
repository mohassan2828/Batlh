document.addEventListener('DOMContentLoaded', () => {
    if (localStorage.getItem('quitDate')) {
        document.getElementById('quit-date').value = localStorage.getItem('quitDate');
    }
    if (localStorage.getItem('quitTime')) {
        document.getElementById('quit-time').value = localStorage.getItem('quitTime');
    }
    if (localStorage.getItem('cigarettesPerDay')) {
        document.getElementById('cigarettes-per-day').value = localStorage.getItem('cigarettesPerDay');
    }
    if (localStorage.getItem('pricePerPack')) {
        document.getElementById('price-per-pack').value = localStorage.getItem('pricePerPack');
    }
    if (localStorage.getItem('currency')) {
        document.getElementById('currency').value = localStorage.getItem('currency');
    }
});

function openSettings() {
    document.querySelector('.container').classList.add('hidden');
    document.querySelector('.settings').classList.remove('hidden');
}

function openProgress() {
    updateProgress();
    document.querySelector('.container').classList.add('hidden');
    document.querySelector('.progress').classList.remove('hidden');
}

function openHealthTracking() {
    updateHealthTracking();
    document.querySelector('.container').classList.add('hidden');
    document.querySelector('.health-tracking').classList.remove('hidden');
}

function nextStep(step) {
    const quitDate = document.getElementById('quit-date').value;
    const quitTime = document.getElementById('quit-time').value;
    const cigarettesPerDay = document.getElementById('cigarettes-per-day')?.value;
    const pricePerPack = document.getElementById('price-per-pack')?.value;
    const currency = document.getElementById('currency')?.value;

    if (step === 'cigarettes') {
        if (!quitDate || !quitTime) {
            alert('ÙŠØ±Ø¬Ù‰ Ø¥Ø¯Ø®Ø§Ù„ ØªØ§Ø±ÙŠØ® ÙˆÙˆÙ‚Øª Ø§Ù„Ø¥Ù‚Ù„Ø§Ø¹.');
            return;
        }
        document.querySelector('.settings').classList.add('hidden');
        document.querySelector('.cigarettes').classList.remove('hidden');
    } else if (step === 'price') {
        if (isNaN(cigarettesPerDay)) {
            alert('ÙŠØ±Ø¬Ù‰ Ø¥Ø¯Ø®Ø§Ù„ Ø¹Ø¯Ø¯ Ø§Ù„Ø³Ø¬Ø§Ø¦Ø± Ø§Ù„ØªÙŠ ØªØ¯Ø®Ù†Ù‡Ø§ ÙÙŠ Ø§Ù„ÙŠÙˆÙ….');
            return;
        }
        document.querySelector('.cigarettes').classList.add('hidden');
        document.querySelector('.price').classList.remove('hidden');
    }
}

function saveSettings() {
    const quitDate = document.getElementById('quit-date').value;
    const quitTime = document.getElementById('quit-time').value;
    const cigarettesPerDay = document.getElementById('cigarettes-per-day')?.value;
    const pricePerPack = document.getElementById('price-per-pack')?.value;
    const currency = document.getElementById('currency')?.value;

    if (!quitDate || !quitTime || isNaN(cigarettesPerDay) || !pricePerPack || !currency) {
        alert('ÙŠØ±Ø¬Ù‰ Ù…Ù„Ø¡ Ø¬Ù…ÙŠØ¹ Ø§Ù„Ø­Ù‚ÙˆÙ„.');
        return;
    }

    localStorage.setItem('quitDate', quitDate);
    localStorage.setItem('quitTime', quitTime);
    localStorage.setItem('cigarettesPerDay', cigarettesPerDay);
    localStorage.setItem('pricePerPack', pricePerPack);
    localStorage.setItem('currency', currency);

    alert('ØªÙ… Ø­ÙØ¸ Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø¨Ù†Ø¬Ø§Ø­.');
    document.querySelector('.price').classList.add('hidden');
    document.querySelector('.container').classList.remove('hidden');
}

function updateProgress() {
    const quitDate = new Date(localStorage.getItem('quitDate') + 'T' + localStorage.getItem('quitTime'));
    const now = new Date();
    const diff = now - quitDate;

    const days = Math.floor(diff / (1000 * 60 * 60 * 24));
    const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

    const cigarettesPerDay = parseFloat(localStorage.getItem('cigarettesPerDay'));
    const pricePerPack = parseFloat(localStorage.getItem('pricePerPack'));

    const moneySaved = (days * cigarettesPerDay * pricePerPack / 20).toFixed(2);
    const cigarettesAvoided = (days * cigarettesPerDay).toFixed(0);

    document.getElementById('money-saved').innerText = moneySaved;
    document.getElementById('cigarettes-avoided').innerText = cigarettesAvoided;

    const years = Math.floor(days / 365);
    const months = Math.floor((days % 365) / 30);
    const daysRemaining = days % 30;
    const hoursRemaining = hours;
    const minutesRemaining = minutes;

    document.getElementById('years-quit').innerText = years;
    document.getElementById('months-quit').innerText = months;
    document.getElementById('days-quit').innerText = daysRemaining;
    document.getElementById('hours-quit').innerText = hoursRemaining;
    document.getElementById('minutes-quit').innerText = minutesRemaining;
}

